{
  "name": "nextjs-electron Boilerplate",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "main/main.js",
  "author": "RBFraphael",
  "description": "Electron + NextJS example project",
  "scripts": {
    "dev": "concurrently -n \"NEXT,ELECTRON\" -c \"yellow,blue\" --kill-others \"next dev\" \"electron .\"",
    "build": "next build && electron-builder",
    "start": "next start",
    "lint": "next lint",
    "electron": "electron .",
    "dist": "next build && electron-builder"
    
  },
  "dependencies": {
    "electron-serve": "^2.0.0",
    "next": "14.2.4",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/react": "18.3.3",
    "concurrently": "^8.2.2",
    "electron": "^31.1.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8",
    "eslint-config-next": "14.2.4",
    "postcss": "^8",
    "tailwindcss": "^3.4.1"
  },
  "build": {
    "appId": "com.example.myapp",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main/**/*",
      "node_modules/**/*",
      "package.json",
      "out/**"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  }

}

